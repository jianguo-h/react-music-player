{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}